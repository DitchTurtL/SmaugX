<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Data\World\Areas\**" />
    <EmbeddedResource Remove="Data\World\Areas\**" />
    <None Remove="Data\World\Areas\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Content\Hosting\Banner.dat" />
    <None Remove="Content\Hosting\MOTD.dat" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Content\Hosting\Banner.dat">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Content\Hosting\MOTD.dat">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
